<resources>

    <!--
       Used in Action Bar, and in AndroidManifest to tell the device the name of this app.
       It's to keep this short, so your launcher icon isn't displayed with "The greatest Wea"
       or something similar.
    -->
    <string name="app_name">Popular Movies App</string>

    <!--
         By convention, "action" denotes that this String will be used as the label for an Action,
         typically from the action bar.  The ActionBar is limited real estate, so shorter is better.
    -->
    <string name="action_settings">Settings</string>

    <!-- Label for the sort order preference  -->
    <string name="pref_sort_order_label">Sort Order</string>

    <!-- Key name for storing sort order in SharedPreferences -->
    <string name="pref_sort_order_key"  translatable="false">sort_order</string>

    <!-- Default sort order for location preference -->
    <string name="pref_sort_order_default" translatable="false">popularity.desc</string>

    <!-- Label for by-popularity sort order option in sort order preference -->
    <string name="pref_label_sort_order_popularity_desc">Most Popular</string>

    <!-- Label for by-highest-rated sort order option in sort order preference -->
    <string name="pref_label_sort_order_vote_average_desc">Highest Rated</string>

    <!-- Value in SharedPreferences for by-popularity sort order option -->
    <string name="pref_sort_order_popularity_desc"  translatable="false">popularity.desc</string>

    <!-- Value in SharedPreferences for by-highest-rated sort order option -->
    <string name="pref_sort_order_vote_average_desc"  translatable="false">vote_average.desc</string>
    <string name="title_activity_detail">DetailActivity</string>

    <string name="hello_world">Hello world!</string>

</resources>
