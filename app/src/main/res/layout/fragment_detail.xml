<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:http="http://schemas.android.com/apk/res/android"
     http:layout_height="match_parent"
    http:layout_width="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.masakorelab.app.popularmoviesapp.DetailActivity.DetailFragment">

        <TextView android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:background="#dc34efc5"
            android:textColor="#ffffffff"
            android:textSize="50dp"
            android:autoText="false"
            android:paddingTop="40dp"
            android:paddingLeft="10dp" />

        <ImageView android:id="@+id/detail_poster"
            android:src="@drawable/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_below="@id/detail_title"
            android:paddingLeft="20dp"
            android:paddingTop="10dp" />

        <TextView android:id="@+id/detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/detail_title"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:layout_toEndOf="@id/detail_poster"
            android:layout_marginTop="10dp" />

        <TextView android:id="@+id/detail_vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_release_date"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_toEndOf="@id/detail_poster" />

        <TextView android:id="@+id/detail_plot_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_poster"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp" />

    </RelativeLayout>

</ScrollView>